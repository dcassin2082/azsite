                    <hr />
                    <h5>Recipient: <span class="text-muted pull-right">@Model.RecipientName</span></h5>
                    <h5>Address: <span class="text-muted pull-right">@Model.AddressLines</span></h5>
                    <h5>City/State/ZIP: <span class="text-muted pull-right">@Model.City, @Model.State @Model.PostalCode</span></h5>
                    <h5>Country: <span class="text-muted pull-right">@Model.CountryCode</span></h5>
                </div>
                <div class="col-md-4">
                    <h4 class="text-muted">Order Totals</h4>
                    <hr />
                    <h5>Subtotal: <span class="text-muted pull-right">@Html.Raw(string.Format("{0:C}", @Model.SubTotal))</span></h5>
                    <h5>Shipping: <span class="text-muted pull-right">@Html.Raw(string.Format("{0:C}", @Model.ShippingAmount))</span></h5>
                    @if (Model.TaxAmount > 0)
                        {
                        <h5>Tax: <span class="text-muted pull-right">@Html.Raw(string.Format("{0:C}", @Model.TaxAmount))</span></h5>
                    }
                    <h5>Total: <span class="text-muted pull-right">@Html.Raw(string.Format("{0:C}", @Model.GrandTotal))</span></h5>
                </div>
            </div>
        </div>
